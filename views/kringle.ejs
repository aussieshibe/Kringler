<% include ./components/header %>
<div class="panel panel-default">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8 text-center">

			<h1><%= kringle.name %></h1>

			<p><br></p>

			<div class="panel panel-default">
				<div class="panel-heading">

					<p><%= kringle.description %></p>
					
					<p>Kringly invite link: <a href="http://kringler.nicknelson.io/kringle/<%= kringle._id %>">http://kringler.nicknelson.io/kringle/<%= kringle._id %></a></p>
					<p>Return to this page when everyone has registered and the Kringliser has matched the Kringlers!</p>
				</div>

				<table class="table table-bordered">

					<tr>
						<th>Kringler Name</th>
						<th>Kringler Match <small>(only your match will be displayed)<small></th>
					</tr>

					<% for (var i = 0; i < kringle.participants.length; i++) { %>
						<tr>
							<td class="col-sm-6"><%= kringle.participants[i].name %></td>
							<td><%= kringle.participants[i].match.name %></td>
						</tr>
					<% } %>
				</table>
			</div>

			<% if(isAdmin) { %>
				<form method="post" action="./<%= kringle._id %>/match">
					<button action="submit" value="Submit">Match Kringlers!</button>
				</form>
			<% } %>

		<% if(!isParticipant) { %>
			<form method="post" action="./<%= kringle._id %>/join">
				<button action="submit" value="Submit">Join the Kringle!</button>
			</form>
		<% } %>
		</div>
		<div class="col-md-2"></div>
	</div>
</div>
<% include ./components/footer %>